unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
    eval "`dircolors -b`"
    alias ls='ls --color=auto --hide="*.pyc" --hide="__pycache__"'
    alias open='gnome-open'
fi

# basic commands
alias grep='grep --color=auto'
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'

# new commands
alias quickweb='python -m SimpleHTTPServer'
alias rmpyc='rm **/*.pyc'
alias rmpycache='rm -r **/__pycache__'
alias mkvirtualenv='mkvirtualenv -p `which python3`'
alias mkvenv2='mkvirtualenv -p `which python2`'

# short names
alias py='ipython`python -c "import sys; print(\"3\" if sys.version_info[0] == 3 else \"\")"` --no-banner --no-confirm-exit -i'
alias jnb='frameworkpython3 -m jupyter notebook'
alias jnb-slides='jupyter nbconvert --to slides --post serve'

# command replacements
alias tree='tree -A -I "*.pyc|*~"'
alias tmux='tmux -2'
alias vim=nvim

# git stuff
alias g='git'
alias gc='git commit'
alias gp='git pull'
alias gs='git status'
alias gy='git pull && git push'
